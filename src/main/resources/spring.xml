<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="service.impl.UserServiceImpl" id="userService">
        <constructor-arg ref="userDao"/>
    </bean>

    <bean class="dao.impl.UserDaoImpl" id="userDao">
        <property name="userStorage" ref="storage" />
    </bean>

    <bean class="service.impl.EventServiceImpl" id="eventService">
        <constructor-arg ref="eventDao"/>
    </bean>

    <bean class="dao.impl.EventDaoImpl" id="eventDao">
        <property name="eventStorage" ref="storage" />
    </bean>

    <bean class="service.impl.TicketServiceImpl" id="ticketService">
        <constructor-arg ref="ticketDao"/>
    </bean>

    <bean class="dao.impl.TicketDaoImpl" id="ticketDao">
        <property name="ticketStorage" ref="storage" />
    </bean>

    <bean class="storage.Storage" id="storage"/>
</beans>